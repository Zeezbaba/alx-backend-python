#!/bin/bash

echo "ğŸ‘‰ Applying updated deployment (blue -> 2.0)..."
kubectl apply -f blue_deployment.yaml

echo "ğŸ“¦ Rolling update in progress..."
kubectl rollout status deployment/messaging_app

echo "ğŸŒ Testing if app stays up during update..."

# Run curl in background every 2s for 30s to simulate client traffic
for i in {1..15}
do
  curl -s http://<Your-Minikube-IP>:<NodePort or IngressPort>/ >> curl_output.log
  echo "âœ… Request $i sent"
  sleep 2
done

echo "âœ… Finished sending curl requests. Checking pods:"
kubectl get pods -l app=messaging_app